  flex-wrap: wrap;
  gap: .5rem;
  justify-content: center;
}
.blog-filter-btn {
  border: 1px solid var(--border);
  background: var(--bg-alt);
  color: var(--text);
  padding: .4rem .9rem;
  border-radius: 999px;
  font-size: .85rem;
  cursor: pointer;
  transition: all .2s ease;
}
.blog-filter-btn.is-active,
.blog-filter-btn:hover {
  background: var(--text);
  color: #fff;
}

